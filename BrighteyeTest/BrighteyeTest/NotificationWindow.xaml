<Window x:Class="BrighteyeTest.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrighteyeTest"
        mc:Ignorable="d"
        Title="Notification" Height="150" Width="300" MinHeight="100" MinWidth="200">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Button Name="okButton" Background="White" Grid.Row="1" 
        BorderBrush="Black" BorderThickness="1" 
        Click="OnOkButtonClick" ClickMode="Press" Margin="5,0,0,5" RenderTransformOrigin="0.5,-0.5"
        VerticalAlignment="Bottom" HorizontalAlignment="Center"
        Height="25" Width="60"
        MaxHeight="25" MaxWidth="60"
        MinHeight="5" MinWidth="10">
            OK
        </Button>
        <Label Name="notificationLabel" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
        </Label>
    </Grid>
</Window>
